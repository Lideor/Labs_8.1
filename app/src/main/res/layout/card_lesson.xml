<?xml version="1.0" encoding="utf-8"?>

 <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginRight="10dp"

    android:clickable="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:foreground="?android:attr/selectableItemBackground"
    android:radius="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    card_view:background="@color/colorMainCard">
    <RelativeLayout
        android:id="@+id/main"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >
    <RelativeLayout
            android:id="@+id/time"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="16dp">

            <TextView
                android:id="@+id/start"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center|top"

                android:layout_marginTop="7dp"
                android:text="15:20"
                android:textColor="@color/colorMainCard"
                android:textSize="25sp"
                android:visibility="visible" />

        <TextView

            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start"
            android:layout_alignParentStart="true"
            android:layout_gravity="top"
            android:layout_marginStart="28dp"
            android:layout_marginTop="-19dp"
            android:text="-"
            android:textColor="@color/colorMainCard"
            android:textSize="30dp" />

        <TextView
                android:layout_marginTop="9dp"

                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start"
                android:layout_gravity="center|top"
                android:text="16:20"
                android:textColor="@color/colorMainCard"
                android:textSize="25sp" />

            <TextView

                android:id="@+id/aud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/end"

                android:layout_alignParentStart="true"
                android:layout_gravity="center|top"
                android:layout_marginStart="9dp"
                android:layout_marginTop="9dp"
                android:text="434/3б"
                android:textColor="@color/colorMainCard" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lesson"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="10dp"

            android:layout_toEndOf="@+id/time">

            <TextView
                android:id="@+id/title"
                android:layout_marginTop="0dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center|top"
                android:textSize="15sp"
                android:gravity="left|center"
                android:text="Практикум по виду профессиональной деятельности"
                android:textColor="@color/colorAccent"
                android:layout_marginEnd="30dp"

                android:visibility="visible" />

            <TextView
                android:id="@+id/type"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_below="@+id/title"
                android:layout_marginTop="9dp"

                android:text="Лабораторное занятие"
                android:textColor="@color/colorMainText"
                android:visibility="visible" />

            <TextView
                android:id="@+id/name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="30dp"

                android:gravity="center"
                android:text="Краева Яна Александровна"
                android:textColor="@color/colorPrimaryCard"
                android:textSize="13sp"
                android:visibility="visible" />

        </RelativeLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>


<?xml version="1.0" encoding="utf-8"?>

 <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="0dp"

    android:clickable="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:foreground="?android:attr/selectableItemBackground"
    android:radius="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2.5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"



    card_view:background="@color/colorMainCard">

    <RelativeLayout
        android:id="@+id/main"

        android:layout_width="match_parent"
        android:layout_height="143dp">

        <RelativeLayout
            android:id="@+id/time"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="16dp">

            <TextView
                android:id="@+id/start"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center|top"

                android:layout_marginTop="7dp"
                android:text="15:20"
                android:textColor="@color/colorMainCard"
                android:textSize="25sp"
                android:visibility="visible" />

            <TextView

                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start"
                android:layout_alignParentStart="true"
                android:layout_gravity="top"
                android:layout_marginStart="28dp"
                android:layout_marginTop="-17.5dp"
                android:text="-"
                android:textColor="@color/colorMainCard"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/end"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start"
                android:layout_gravity="center|top"
                android:layout_marginTop="9dp"
                android:text="16:20"
                android:textColor="@color/colorMainCard"
                android:textSize="25sp" />

            <TextView

                android:id="@+id/aud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/end"

                android:layout_alignParentStart="true"
                android:layout_gravity="center|top"
                android:layout_marginStart="7dp"
                android:layout_marginTop="9dp"
                android:text="434/3б"
                android:textColor="@color/colorMainCard" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lesson"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_toEndOf="@+id/time"

            android:padding="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center|top"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:gravity="left|center"
                android:text="Практикум по виду профессиональной деятельности"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"

                android:visibility="visible" />

            <TextView
                android:id="@+id/type"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="9dp"
                android:text="Лабораторное занятие"

                android:textColor="@color/colorMainText"
                android:textSize="13sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/name"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"


                android:layout_marginBottom="10dp"
                android:gravity="right"
                android:text="Краева Яна Александровна"
                android:textColor="@color/colorPrimaryCard"
                android:textSize="13sp"
                android:visibility="visible" />

        </RelativeLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>

